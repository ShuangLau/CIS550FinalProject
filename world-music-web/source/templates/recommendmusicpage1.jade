extend default

block content
  .wrapper
      .left
        table(margin)
          thead
            tr
              th(align='left') Singer
          tbody
            tr
              td= rows[0].artist_name

        table
          thead
            tr
              th(align='left') Song
          tbody
            tr
              td= rows[0].title

        table
          thead
            tr
              th(align='left') Genre
          tbody
            tr
              td= rows[0].mbtag

        table
          thead
            tr
              th(align='left') Release
          tbody
            tr
              td= rows[0].year

        table
          thead
            tr
              th(align='left') Rate
          tbody
            tr
              td= (rows[0].artist_hotttnesss *10).toFixed(1)

      .right
        img(src="https://i1.sndcdn.com/artworks-000215448584-3upr1x-t500x500.jpg", width="380")